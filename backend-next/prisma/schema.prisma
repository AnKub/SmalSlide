generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // для старту можна SQLite, потім легко перейти на PostgreSQL
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  avatar    String?
  bio       String?
  slogan    String?
  contacts  Json?
  createdAt DateTime @default(now())
}
